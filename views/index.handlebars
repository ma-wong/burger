<div class="row">
  <img id="burger-icon" src="/assets/img/burger.png" alt="" class="center">
</div>

<div class="row">
  <h1 id="title">Eat-Da-Burger!</h1>
</div>

<div class="row">
  <div class="not-eaten col-md-6">
    <h2>Burgers Not Eaten Yet!</h2>

    <ol>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ol>
  </div>

  <div class="eaten col-md-6">
    <h2>Burgers Already Eaten!</h2>

    <ol>
      {{#each burgers}}
        {{#if devoured}}
          {{> burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ol>
  </div>
</div>

<div class="add-burger">
  <h2>Add a Burger</h2>

  <form class="create-form">

    <div class="form-group">
      <input type="text" id="burger-name" name="name">
    </div>

    <button id="submit-btn" type="submit">Submit</button>
  </form>

  <p>Enter a burger you want to eat. Then click the "Submit" button</p>

</div>